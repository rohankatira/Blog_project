<%- include('../partials/header') %>

<div class="container container-main d-flex flex-column align-items-center">
  <img src="<%= user.profilePicture ? '/uploads/' + user.profilePicture : 'https://via.placeholder.com/120' %>"
       class="profile-avatar mb-3" alt="Profile">
  <h3 class="fw-bold"><%= user.username %></h3>
  <div class="text-muted mb-2"><%= user.email %></div>
  <div class="mb-3"><%= user.bio || 'No bio yet.' %></div>
  <a href="/profile/edit" class="btn btn-outline-primary mb-2">Edit Profile</a>
  <form action="/profile/delete" method="POST" onsubmit="return confirm('Delete your profile?');">
    <button type="submit" class="btn btn-danger">Delete Profile</button>
  </form>
</div>

<%- include('../partials/footer') %>
